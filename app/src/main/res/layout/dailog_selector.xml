<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
    android:id="@+id/textViewCamera"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layout_width="0dp"
    android:text="Camera"
    android:textAppearence="@android:style/TextAppearence.Large"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />
<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text = "Gallery"
    android:id="@+id/textViewGallery"
    app:layout_marginTop = "16dp"
    app:layout_marginBottom = "16dp"
    app:layout_constraintTop_toBottomOf="@+id/textViewCamera"
    app:layout_constraintStart_toStartOf="@+id/textViewCamera"
    app:layout_constraintEnd_toEndOf="@+id/textViewCamera"
    android:textAppearence="@android:style/TextAppearence.Large"/>
</androidx.constraintlayout.widget.ConstraintLayout>